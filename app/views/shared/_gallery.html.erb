<div class="modal fade bs-modal-<%=game.id%> " tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="gallery-box">
        <div class="view">
          <div class="big-image"><img  src="<%=game.photos.first.image.url%>" width="600" height="300"></div>
            <% if game.photos.count > 1 %>
              <a href="#" class="prev"></a>
              <a href="#" class="next"></a>
            <%end%>
        </div>
        <% if game.photos.count > 1 %>
          <div class="thumbnails">
            <% game.photos.each do |photo| %>
              <a href="<%= photo.image.url%>" data-src=""><img src="<%= photo.image.url(:thumb)%>" alt="<%=photo.caption%>"></a>
            <%end%>
          </div>
        <%end%>
      </div>
    </div>
  </div>
</div>
