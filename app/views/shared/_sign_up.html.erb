<div class="modal fade in" id="sign_up">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button class="close" data-dismiss="modal">x</button>
        <h2 class="text-center">Регистрация</h2>
      </div>
      <div class="modal-body">
        <%= form_for(User.new, url: registration_path(:user), html: {id: 'sign_up_user', :'data-type' => 'json'}, remote: true) do |f| %>
          <div class="form-group">
            <%= f.text_field :name, autofocus: true, placeholder: 'Имя', class: "form-control", required: true %>
          </div>
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, placeholder: 'Email', class: "form-control", required: true %>
          </div>
          <div class="checkbox">
            <label>
              <%= check_box_tag :pers_agree %>
              Согласен с обработкой перс.данных
            </label>
          </div>
          <div class="checkbox">
            <label>
              <%= check_box_tag :user_agree %>
              Согласен с пользовательским соглашением
            </label>
          </div>
          <div class="text-center">
            <%= f.submit "Регистрация", class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
      </div>
    </div>
  </div>
</div>