<div class="modal fade in" id="restore_password">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button class="close" data-dismiss="modal">x</button>
        <h2 class="text-center">Забыли пароль?</h2>
      </div>
      <div class="modal-body">
        <%= form_for(User.new, url: password_path(:user), html: { method: :post }) do |f| %>
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control", required: true %>
          </div>
          <div class="text-center">
            <%= f.submit "Выслать ссылку для восстановления пароля", class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
      </div>
    </div>
  </div>
</div>