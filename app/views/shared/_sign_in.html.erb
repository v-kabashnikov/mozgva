<div class="modal fade in signIn" id="sign_in">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button class="close" data-dismiss="modal">x</button>
        <h2 class="text-center">Авторизация</h2>
      </div>
      <div class="modal-body">
        <%= form_for(User.new, url: session_path(:user), html:{id: 'sign_in_user', :'data-type' => 'json'  }, remote: true) do |f| %>
          
            <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "modalInput", required: true %>
            <%= f.password_field :password, autocomplete: "off", placeholder: "Пароль", class: "modalInput", required: true %>
          <% if Devise.mappings[:user].rememberable? -%>
            <div>
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, "Запомнить меня" %>
            </div>
          <% end -%>
          <%= f.submit "Войти", class: "redBtn" %>
        <% end %>
      </div>
    </div>
  </div>
</div>