<div class="modal fade in" id="sign_in">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button class="close" data-dismiss="modal">x</button>
        <h2 class="text-center">Авторизация</h2>
      </div>
      <div class="modal-body">
        <%= form_for(User.new, url: session_path(:user), html:{id: 'sign_in_user', :'data-type' => 'json'}, remote: true) do |f| %>
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control", required: true %>
          </div>
          <div>
            <%= f.password_field :password, autocomplete: "off", placeholder: "Пароль", class: "form-control", required: true %>
          </div class="form-group">
          <% if Devise.mappings[:user].rememberable? -%>
            <div>
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, "Запомнить меня" %>
            </div>
            <a data-dismiss="modal" data-toggle="modal" data-target="#restore_password" aria-hidden="false" href="#">Забыли пароль?</a>
          <% end -%>
          <div class="text-center">
            <%= f.submit "Войти", class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
      </div>
    </div>
  </div>
</div>