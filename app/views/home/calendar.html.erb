<section class="topInfo calendar">
	<div class="contentWrap">
		<div class="btnWrap authorizationWrap">
			<% if current_user %>
			<span>
				<img src="<%= asset_path('lightningSec/lightning.png') %>">
				<div class="links">
					<%= link_to "Выйти", destroy_user_session_path, method: :delete %>
					<%= link_to "Редактировать профиль", '#edit_profile', 'data-toggle' => 'modal' %>
					<% if current_user.invitations.present? %>
					<%= link_to "#{current_user.invitations.count} #{Russian.p(current_user.invitations.count, "приглашение", "приглашения", "приглашений")}", '#invitations_modal', 'data-toggle' => 'modal' %>
					<% end %>
					<% if current_user.team %>
					<%= link_to("Моя команда", my_team_path) %>
					<% else %>
					<% if current_user.phone_confirmed_at %>
					<%= link_to('Создать команду', '#team_modal', 'data-toggle' => 'modal') %>
					<% else %>
					<a href="#phone_confirmation" data-toggle="modal">Создать команду</a>
					<% end %>
					<% end %>
				</div>
			</span>
			<% else %>
			<span>
				<img src="<%= asset_path('lightningSec/lightning.png') %>">
				<div class="links">
					<a href="#sign_in" data-toggle="modal">Войти</a>
					<a href="#sign_up" data-toggle="modal">Зарегистрироваться</a>
				</div>
			</span>
			<% end %>
		</div>
		<h1>Календарь<br/> игр</h1>
	</div>
</section>
<section class="calendarSec">
	<ul class="navigationWrap">
		<li><%= link_to root_path do %>Главная<% end %></li>
		<li><%= link_to leagues_path do %>Лиги<% end %></li>
		<li><%= link_to sert_path do %>Сертификаты<% end %></li>
		<li><%= link_to rating_path do %>Рейтинг команд<% end %></li>
		<li><%= link_to korporat_path do %>Корпоратив<% end %></li>
		<li><%= link_to franchise_path do %>Франшиза и спонсорство<% end %></li>
	</ul>
	<div class="calendarWrap">
		<div class="sideBar">
			<div class="wrapSelectCityMonth" id="games_filter" data-action="<%=games_filter_path%>" data-method="get"> <!--SELECT SITY & MONTH-->
					<div id="dd" class="wrapper-dropdown" tabindex="1">
						<span data-current-value="<%= @city.id %>"><%= @city.name %></span>
						<ul class="dropdown" tabindex="1" data-name="city_id">
							<% City.all.each do |city| %>
							<li><a href="#" data-value="<%= city.id %>"><%= city.name %></a></li>
							<% end %>
						</ul>
					</div>
					<div id="dd2" class="wrapper-dropdown" style="right:0" tabindex="1">
						<span data-current-value="<%= @curr_month.first %>"><%= @curr_month.second %></span>
						<ul class="dropdown" tabindex="1" data-name="year_month">
							<% @months.each do |month| %>
							<li><a href="#" data-value="<%= month.first %>"><%= month.second %></a></li>
							<% end %>
						</ul>
					</div>
					<div style="display:none">
						<span data-current-value="4">4</span>
						<ul data-name="max_groups"><li></li></ul>
					</div>
					​</div>
			<div class="phoneHelp">
				<p>Если у вас есть вопрос: <br/> 88 000 000 0</p>
			</div>
			<div class="franchise">
				<a href="/franchise">
					<ul>
						<li>Хочу<br/> свою<br/> Мозгву</li>
						<li>Речь идет<br/> о франшизе</li>
					</ul>
				</a>
			</div>
			<div class="adAppisode">
				<img src="<%= asset_path('calendar/appisode.png') %>">
				<span>Приложение для мозгвичей, сериалов любителей для!</span>
			</div>
		</div>
		<div class="eventsParth">
			<div class="gamesTabs">
				<%= render 'games/tabs' %>
			</div>
		    <!-- <div class="loadMore">
		    	<span></span>
		    	<span></span>
		    	<span></span>
		    </div> -->
		</div>
	</div>
	<footer class="calendarF">
		<ul>
			<li>
				<div><img src="<%= asset_path('symbol/like.png') %>"/><span>Лойс</span></div>
				<div class="tag">#этомозвадетка</div>
			</li>
			<li>
				<!--SELECT SITY & MONTH
				<div class="wrapSelectCityMonth" id="games_filter" data-action="<%=games_filter_path%>" data-method="get">
					<div id="dd" class="update_city wrapper-dropdown dropup" tabindex="1">
						<span data-current-value="<%= @city.id %>"><%= @city.name %></span>
						<ul class="dropdown" tabindex="1" data-name="city_id">
							<% City.all.each do |city| %>
							<li><a href="#" data-value="<%= city.id %>" data-current-value="<%= @city.id %>"><%= city.name %></a></li>
							<% end %>
						</ul>
					</div>
					<div style="display:none">
						<span data-current-value="4">4</span>
						<ul data-name="max_groups"><li></li></ul>
					</div>
				</div>
				AND SELECT SITY & MONTH-->
				<img src="<%= asset_path('calendar/logo.png') %>"/>
			</li>
		</ul>
	</footer>
</section>

<% unless current_user %>
<%= render 'shared/sign_in' %>
<%= render 'shared/sign_up' %>
<%= render 'shared/restore_password' %>
<%= render 'shared/user_agree' %>
<% else %>
<%= render 'shared/edit_profile' %>
<%= render 'shared/team_modal' unless current_user.team %>
<%= render 'shared/phone_confirmation' unless current_user.phone_confirmed_at %>
<%= render 'shared/invitations_modal' if current_user.invitations.present? %>
<% end %>
<%= render 'shared/errors_modal' %>
<%= render 'shared/teams_modal' %>