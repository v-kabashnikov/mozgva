<section class="lightningSection">
	<div class="contentWrapper">
		<p>
		<span><img src="<%= asset_path('lightningSec/lightning.png') %>"></span>
		Молния!
		</p>
		<div class="imgWrapp">
			<img class="left" src="<%= asset_path('lightningSec/bgLeft.png') %>">
		</div>
		<h3>Начинается Чемпионат Мозгвы! Опа-опа!</h3>
	</div>
</section>
<section class="headInfo">
	<div class="contentWrapper">
		<div class="line">
			<div class="authorizationWrap" >
				
				<% if current_user %>
					<span>
						<img src="<%= asset_path('lightningSec/lightning.png') %>">
						<div class="links">
							<%= link_to "Выйти", destroy_user_session_path, method: :delete %>
							<%= link_to "Редактировать профиль", '#edit_profile', 'data-toggle' => 'modal' %>
							<% if current_user.invitations.present? %>
								<%= link_to "#{current_user.invitations.count} #{Russian.p(current_user.invitations.count, "приглашение", "приглашения", "приглашений")}", '#invitations_modal', 'data-toggle' => 'modal' %>
							<% end %>
							<% if current_user.team %>
								<%= link_to("Моя команда", my_team_path) %>
							<% else %>
								<%= link_to('Создать команду', '#team_modal', 'data-toggle' => 'modal') %>
							<% end %>
						</div>
					</span>		
				<% else %>
					<span>
						<img src="<%= asset_path('lightningSec/lightning.png') %>">
						<div class="links">
							<a href="#sign_in" data-toggle="modal">Войти</a>
							<a href="#sign_up" data-toggle="modal">Зарегистрироваться</a>
						</div>
					</span>
		  	<% end %>
			</div>

			<div class="logoWrap">
				<a href="/"><img src="<%= asset_path('logo.png') %>"></a>
			</div>
			<div class="wrapSelectCityMonth">
				<!-- <img src="<%= asset_path('symbol/location.png') %>"/> -->
				<div class="wrapper-dropdown" tabindex="1" id="update_city" data-method="put" data-action="<%=update_city_path%>">
					<span data-value="<%= @city.id %>"><%= @city.name %></span>
			    <ul class="dropdown" tabindex="1" data-name="city_id">
		    		<% City.all.each do |city| %>
			        <li><a href="#" data-value="<%= city.id %>"><%= city.name %></a></li>
			      <% end %>
			    </ul>
				</div>
			</div>
		</div>
		<div class="line SomeTabs">
			<%= link_to leagues_path do %>
			<div class="item">
				<img src="<%= asset_path('header/ligi.png') %>">
				<p>Лиги</p>
			</div>
			<% end %>
			<div class="item">
				<img src="<%= asset_path('header/gifts.png') %>">
				<p>Подарочные<br/> сертификаты</p>	
			</div>
			<div class="item">
				<img src="<%= asset_path('header/rang.png') %>">
				<p>Рейтинг<br/> команд</p>	
			</div>
			<div class="item">
				<img src="<%= asset_path('header/calendar.png') %>">
				<p>Календарь игр</p>	
			</div>
			<div class="item">
				<img src="<%= asset_path('header/korporat.png') %>">
				<p>Корпоратив</p>	
			</div>
			<div class="item">
				<img src="<%= asset_path('header/connect.png') %>">
				<p>Франшиза<br/> и спонсорство</p>	
			</div>
		</div>

	</div>
</section>
